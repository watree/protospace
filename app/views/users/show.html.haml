.container.user-page
  %header.user-nav
    .media
      .media-left
        = image_tag(@user.avatar, alt: "64x64", class: "media-object", style: "width: 64px; height: 64px;")
      .media-body
        %h4#top-aligned-media.media-heading
          = @user.nickname
          %span.label.label-default.project-number
            = @prototypes.count
            %i Projects
        .proto-user
          %span.degree
          = @user.member
        .row
          .col-md-6
            %h4 Profile
            %p
              = @user.profile
          .col-md-6
            %h4 Works
            %p
              = @user.works
.container.proto-list
  .row
    = render partial: "layouts/prototype", collection: @prototypes
.text-center
  %ul.pagination
    %li.disabled
      = paginate(@prototypes)
